{
    "_comment_main": "Main configuration for the Cylae Video File Checker script.",
    "language": "en",
    "_comment_language": "Set the display language. Supported: 'en' (English), 'fr' (French).",
    "performance": {
        "_comment": "Settings for performance tuning.",
        "maxConcurrentJobs": 4,
        "enableDuplicateDetection": false
    },
    "ffmpeg": {
        "_comment": "The {filePath} placeholder will be replaced with the actual file's path.",
        "downloadUrl": "https://www.gyan.dev/ffmpeg/builds/ffmpeg-git-full.7z",
        "command": "ffmpeg -v error -i \"{filePath}\" -f null -",
        "_comment_gpu": "Examples for GPU acceleration. Copy a command into the 'command' field above.",
        "gpuExamples": {
            "NVIDIA": "ffmpeg -hwaccel nvdec -v error -i \"{filePath}\" -f null -",
            "Intel_QSV": "ffmpeg -hwaccel qsv -v error -i \"{filePath}\" -f null -",
            "AMD_AMF": "ffmpeg -hwaccel amf -v error -i \"{filePath}\" -f null -"
        }
    },
    "sevenZip": {
        "downloadUrl": "https://www.7-zip.org/a/7z2301-extra.zip"
    },
    "fileHandler": {
        "videoExtensions": [ ".mkv", ".mp4", ".avi", ".mov", ".wmv", ".flv", ".webm" ],
        "actionOnCorruption": "Move",
        "_comment_action": "Action for corrupted files: 'Move' or 'Delete'. 'Move' is safer.",
        "quarantinePath": "./Corrupted_Videos"
    },
    "hashing": {
        "algorithm": "SHA256"
    }
}
